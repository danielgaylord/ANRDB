<Window x:Class="ANRDB.CRWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose a Side" Height="350" Width="400" Background="#FFD6D6D6" ResizeMode="NoResize" Icon="Images/icon.png" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <Image x:Name="Corp_Image" Opacity="0.5" Source="Images/corp-back.jpg"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30" Height="200" Width="142" />
        <Button x:Name="Corp_Button" Opacity="0.0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30" Height="200" Width="142" Click="Corp_Click"/>
        <Image x:Name="Runner_Image" Opacity="0.5" Source="Images/runner-back.jpg"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30" Height="200" Width="142" />
        <Button x:Name="Runner_Button" Opacity="0.0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30" Height="200" Width="142" Click="Runner_Click"/>
        <Button x:Name="Create_Button" Content="Click an Image" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="30" Height="25" Width="150" IsEnabled="False" IsDefault="True" Click="ChooseSide"/>
    </Grid>
</Window>
